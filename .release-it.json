{
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
        "commitMessage": "chore(release): publish version ${version}"
    },
    "github": {
        "release": false
    },
    "npm": {
        "release": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "header": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [Conventional Commits](https://conventionalcommits.org) for commit guidelines.",
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "Features"
                    },
                    {
                        "type": "fix",
                        "section": "Bug Fixes"
                    },
                    {
                        "type": "chore",
                        "hidden": true
                    },
                    {
                        "type": "docs",
                        "hidden": true
                    },
                    {
                        "type": "style",
                        "hidden": true
                    },
                    {
                        "type": "refactor",
                        "hidden": true
                    },
                    {
                        "type": "perf",
                        "hidden": true
                    },
                    {
                        "type": "test",
                        "hidden": true
                    }
                ]
            }
        }
    }
}
